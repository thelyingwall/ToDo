@model ToDo.Models.Priority

@{
    ViewData["Title"] = "Edycja";
}

<h1 class="text-center">Edycja priorytetów</h1>

<div class="row justify-content-center">
    <div class="col-md-6">
        <hr />
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="PriorityId" />
            <div class="form-group">
                <label asp-for="PriorityName" class="control-label">Nazwa</label>
                <input asp-for="PriorityName" class="form-control" />
                <span asp-validation-for="PriorityName" class="text-danger"></span>
            </div><br />
            <div class="form-group text-center">
                <input type="submit" value="Zapisz" class="btn btn-outline-dark" />
                <a asp-action="Index" class="btn btn-outline-dark">Powrót</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
