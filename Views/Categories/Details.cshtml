@model ToDo.Models.Category

@{
    ViewData["Title"] = "Szczegóły";
}
<partial name="_Background" />
<div class="no-gradient justify-content-center mx-auto" style="margin-top:15%;width:70%;">
<h1>Szczegóły</h1>

<div>
    <h4>Kategoria</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Nazwa
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.CategoryName)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.CategoryId" class="btn btn-outline-dark">Edycja</a>
    <a asp-action="Index" class="btn btn-outline-dark">Powrót</a>
</div>
</div>