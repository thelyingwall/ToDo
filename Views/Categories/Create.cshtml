@model ToDo.Models.Category

@{
    ViewData["Title"] = "Nowa kategoria";
}
<partial name="_Background" />
<div class="no-gradient justify-content-center mx-auto" style="margin-top:15%;width:70%;">

<h1 class="text-center">Nowa kategoria</h1>


<div class="row justify-content-center">
    <div class="col-md-6">
        <hr />
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="CategoryName" class="control-label">Nazwa</label>
                <input asp-for="CategoryName" class="form-control" />
                <span asp-validation-for="CategoryName" class="text-danger"></span>
            </div><br />
            <div class="form-group text-center">
                <input type="submit" value="Utwórz" class="btn btn-outline-dark" />
                <a asp-action="Index" class="btn btn-outline-dark">Powrót</a>

            </div>
        </form>
    </div>
</div></div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
