@model ToDo.Models.Category

@{
    ViewData["Title"] = "Nowa kategoria";
}

<h1>Nowa kategoria</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="CategoryName" class="control-label">Nazwa</label>
                <input asp-for="CategoryName" class="form-control" />
                <span asp-validation-for="CategoryName" class="text-danger"></span>
            </div><br />
            <div class="form-group">
                <input type="submit" value="Utwórz" class="btn btn-outline-dark" />
                <a asp-action="Index" class="btn btn-outline-dark">Powrót</a>

            </div>
        </form>
    </div>
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
