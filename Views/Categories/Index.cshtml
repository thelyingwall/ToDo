@model IEnumerable<ToDo.Models.Category>

@{
    ViewData["Title"] = "Kategorie";
}

<div style="display: flex; justify-content: space-between; align-items: center;">
    <h1>Kategorie</h1>
    <p>
        <a asp-action="Create" class="btn btn-outline-dark">Nowa kategoria</a>
    </p>
</div>
<table class="table">
    <thead>
        <tr>
            <th>
                Nazwa
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.CategoryName)
            </td>
            <td>
                    <a asp-action="Edit" asp-route-id="@item.CategoryId" class="btn btn-outline-dark">Edytuj</a>
                    <a asp-action="Details" asp-route-id="@item.CategoryId" class="btn btn-outline-dark">Szczegóły</a>
                    <a asp-action="Delete" asp-route-id="@item.CategoryId" class="btn btn-outline-dark">Usuń</a>
            </td>
        </tr>
}
    </tbody>
</table>
