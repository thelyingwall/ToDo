@model ToDo.Models.Task

@{
    ViewData["Title"] = "Usuwanie";
}
<partial name="_Background" />
<div class="no-gradient justify-content-center mx-auto" style="margin-top:10%;width:70%;">
<h1>Usuwanie</h1>

<h3>Jesteś pewien, że chcesz usunąć?</h3>

    <h4>Zadanie</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Tytuł
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Title)
        </dd>
        <dt class="col-sm-2">
            Opis
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Description)
        </dd>
        <dt class="col-sm-2">
            Zrobione
        </dt>
        <dd class="col-sm-10">
            <i class="@(Model.IsDone==true ? "bi bi-check-square-fill" : "bi bi-square")"></i>
        </dd>
        <dt class="col-sm-2">
            Data utworzenia
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CreateDate)
        </dd>
        <dt class="col-sm-2">
            Termin ukończenia
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Deadline)
        </dd>
        @if (Model.ImagePath != null)
        {
            <dt class="col-sm-2">
                Obrazek
            </dt>
            <img src="@Url.Content(Model.ImagePath)" class="card-img-top mb-5 mb-md-0">
        }
    </dl>
    <form asp-action="Delete">
        <input type="hidden" asp-for="TaskId" />
        <input type="submit" value="Usuń" class="btn btn-danger" />
        <a href="javascript:history.back()" class="btn btn-outline-dark">Powrót</a>
    </form>
</div>
